<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testactionbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.testactionbar.view.MyViewPage"
            android:label="@string/title_activity_my_view_page"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!--  -->
        <activity
            android:name="com.example.testactionbar.view.ListLinks"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 分类列表 -->
        <activity
            android:name="com.example.testactionbar.view.ThemeActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 主题书单 -->
        <activity
            android:name="com.example.testactionbar.view.TypeActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 排行榜 -->
        <activity
            android:name="com.example.testactionbar.view.RankActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 书籍列表 -->
        <activity
            android:name="com.example.testactionbar.view.BookListActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 书籍分类 -->
        <activity
            android:name="com.example.testactionbar.view.BookListByTypeActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 书籍排行 -->
        <activity
            android:name="com.example.testactionbar.view.BookListByRankActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 书籍搜索 -->
        <activity
            android:name="com.example.testactionbar.view.BookListBySearchActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 书籍搜索 -->
        <activity
            android:name="com.example.testactionbar.view.BookIntroduceActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 章节列表 -->
        <activity
            android:name="com.example.testactionbar.view.BookChapterListActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <!-- 章节内容 -->
        <activity
            android:name="com.example.testactionbar.view.ChapterContentActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
             >
        </activity>
        <!-- 测试 -->
        <activity android:name="com.example.testactionbar.view.Test" >
        </activity>
    </application>

</manifest>