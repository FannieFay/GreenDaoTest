<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/book_background"
    android:scrollbars="@null" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/bookIntroduceTv"
            style="@style/BaseText_Simple"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="8dp"
            android:textColor="@color/black_900" />

        <Button
            android:id="@+id/bookIntroduceAddBtn"
            style="@style/BaseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/introduce_add_to_shelf"
            android:visibility="gone" />

        <Button
            android:id="@+id/bookIntroduceReadBtn"
            style="@style/BaseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/introduce_read"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>